# Backend Environment Variables

# Database Configuration
DATABASE_URL=postgresql://user:password@ep-xxx-xxx.neon.tech/dbname?sslmode=require

# JWT Configuration (CRITICAL: Must match BETTER_AUTH_SECRET in frontend)
JWT_SECRET=your-secure-random-32-character-secret-key-here

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=False

# CORS Configuration
CORS_ORIGINS=["http://localhost:3000"]

# JWT Token Settings
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# OpenRouter Configuration (Required for AI Chat)
OPENROUTER_API_KEY=sk-or-your-openrouter-api-key-here

# MCP Server Configuration (Internal - usually same as API)
MCP_SERVER_URL=http://localhost:8000/mcp
